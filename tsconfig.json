{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    "useUnknownInCatchVariables": false,
    "outDir": "types",
    "removeComments": false,
    "resolveJsonModule": true,
  },
  "include": ["exports/**/*.js", "lib/**/*.js", "data/**/*.js"],
}